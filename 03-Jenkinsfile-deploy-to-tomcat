pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    deploy adapters: [
                        tomcat10(
                            credentialsId: 'tomcat_credential',
                            path: '',
                            url: 'http://localhost:8081/'
                        )
                    ],
                    contextPath: '/pipeline',
                    onFailure: false,
                    war: 'target/*.war'
                }
            }
        }
    }
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
